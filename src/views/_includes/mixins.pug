mixin svgsprite(name)
  svg(class="svgsprite _" + name)&attributes(attributes)
    use(xlink:href="assets/img/sprites/svgsprites.svg#" + name)

mixin counter()
  .counter 
    .counter__minus
      +svgsprite('minus')
    input.counter__input(type="text" disabled value="1")
    .counter__plus
      +svgsprite('plus')

mixin crumbs(...items)
  .crumbs&attributes(attributes)
    each item in items
      a.crumbs__link(href="#")=item 