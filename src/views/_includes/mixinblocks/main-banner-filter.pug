                    span.checkbox__ico
                    p.checkbox__text Событие 3
                  label.checkbox
                    input.hidden(type="checkbox")
                    span.checkbox__ico
                    p.checkbox__text Событие 4
                  .main-banner__main-buttons 
                    button.button.--white.--small.filter__buttom-close Закрыть
                    button.button.--dark.--small.filter__buttom-apply Применить
          .main-banner__item
            .main-banner__tooltip
              .main-banner__main.-js-fadeintooltip Стоимость 
                .tooltip
                  .main-banner__main-title Стоимость
                  .range
                    .range__inputs
                      .range__input.range__from
                        input#range__from(type="text" disabled )
                      .range__input.range__to
                        input#range__to(type="text" disabled)
                    #range-bar
                  .main-banner__main-buttons 
                    button.button.--white.--small.filter__buttom-close Закрыть
                    button.button.--dark.--small.filter__buttom-apply Применить
        .filter__reset Сбросить всё
